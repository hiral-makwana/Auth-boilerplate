{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDirs": [
      "src",
      "test"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "src/types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/index.mjs",
    "src/**/*.json",
    "test/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}